<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="20260122-add-host-id-to-properties" author="your_name">
        <addColumn tableName="properties">
            <column name="host_id" type="bigint">
                <constraints nullable="true" />
            </column>
        </addColumn>

        <update tableName="properties">
            <column name="host_id" value="3" />
            <where>host_id IS NULL</where>
        </update>

        <addNotNullConstraint tableName="properties"
            columnName="host_id"
            columnDataType="bigint" />

        <addForeignKeyConstraint baseTableName="properties"
            baseColumnNames="host_id"
            constraintName="fk_properties_host"
            referencedTableName="users"
            referencedColumnNames="id" />
    </changeSet>

</databaseChangeLog>